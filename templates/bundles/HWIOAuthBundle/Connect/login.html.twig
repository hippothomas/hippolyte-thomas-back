{% extends '@HWIOAuth/layout.html.twig' %}

{% block hwi_oauth_content %}
{% if app.user %}
    <div class="alert alert-warning">Vous êtes déjà connecté!</div>
{% else %}
    <h1>Connectez-vous !</h1>

    {% if error is defined and error %}
        <div class="alert alert-danger">Erreur: {{ error }}</div>
    {% endif %}

    <div class="mt-3 text-center">
       <a class="btn btn-success" href="{{ hwi_oauth_login_url('keycloak') }}">Se connecter avec Keycloak</a>
    </div>
{% endif %}
{% endblock hwi_oauth_content %}


