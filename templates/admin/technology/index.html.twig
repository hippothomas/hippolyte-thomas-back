{% extends 'admin/base.html.twig' %}

{% block title %}Technologies {{ title_base }}{% endblock %}
{% block page_title %}Gestion des Technologies{% endblock %}
{% block page_pretitle %}Technologies{% endblock %}
{% block page_actions %}
    <a href="{{ path('admin_technology_new') }}" class="btn btn-success">Cr√©er une nouvelle Technologie</a>
{% endblock %}

{% block page_content %}
<div class="container mb-5">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Projets</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for technology in technologies %}
                <tr>
                    <td>{{technology.id}}</td>
                    <td>{{technology.name}}</td>
                    <td>{{technology.slug}}</td>
                    <td><span class="badge bg-primary rounded-pill">{{technology.projects|length}}</span></td>
                    <td class="table-actions">
                        <a href="{{ path('admin_technology_edit', {id: technology.id}) }}" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="{{ path('admin_technology_delete', {id: technology.id}) }}" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
