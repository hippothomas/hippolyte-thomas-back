{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Technologies{% endblock %}

{% block body %}
<div class="container mb-5">
    <div class="row align-items-center my-5">
        <div class="col">
            <h1>Gestion des Technologies</h1>
        </div>
        <div class="col d-flex justify-content-end">
            <a href="#" class="btn btn-success">Cr√©er une nouvelle Technologie</a>
        </div>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Projets</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for technology in technologies %}
                <tr>
                    <td>{{technology.id}}</td>
                    <td>{{technology.name}}</td>
                    <td>{{technology.slug}}</td>
                    <td><span class="badge bg-primary rounded-pill">{{technology.projects|length}}</span></td>
                    <td>
                        <a href="{{ path('admin_technology_edit', {id: technology.id}) }}" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="#" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
