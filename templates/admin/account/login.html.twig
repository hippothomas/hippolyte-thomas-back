{% extends 'admin/base.html.twig' %}

{% block title %}Connexion Ã  l'administration{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 mt-5 px-3">
                <h1>Connectez-vous !</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue : le nom d'utilisateur ou le mot de passe est incorrect !</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group mt-3">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" name="_username" id="username" class="form-control" placeholder="Nom d'utilisateur..." value="{{username}}" required />
                    </div>
                    <div class="form-group mt-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe..." required />
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
