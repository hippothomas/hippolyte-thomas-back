{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Projets{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Gestion des Projets</h1>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Technologies</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{project.id}}</td>
                    <td>{{project.name}}</td>
                    <td>{{project.slug}}</td>
                    <td>
                        {% for techno in project.technologies %}
                            <span class="badge bg-primary">{{techno.name}}</span>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="#" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
