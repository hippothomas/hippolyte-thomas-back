{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Projets{% endblock %}

{% block body %}
<div class="container mb-5">
    <div class="row align-items-center my-5">
        <div class="col">
            <h1>Gestion des Projets</h1>
        </div>
        <div class="col d-flex justify-content-end">
            <a href="{{ path('admin_project_new') }}" class="btn btn-success">Cr√©er un nouveau Projet</a>
        </div>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Technologies</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{project.id}}</td>
                    <td>{{project.name}}</td>
                    <td>{{project.slug}}</td>
                    <td>
                        {% for techno in project.technologies %}
                            <span class="badge bg-primary">{{techno.name}}</span>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin_project', {id: project.id}) }}" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="#" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
