
{#  START - BLOCK PICTURE  #}
{% block _project_pictures_widget %}
    {{ form_widget(form) }}

    <input type="hidden" id="widget-pictures-counter" value="0" />

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-dark">Ajouter une image</button>
    </div>
{% endblock %}

{% block _project_pictures_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _project_pictures_entry_widget %}
    <div class="form-group mt-2 mb-2" id="block_pictures_{{id}}">
        <div class="row">
            <div class="col-11">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-1">
                <button type="button" data-action="delete" data-target="#block_pictures_{{id}}" class="btn btn-danger"><i class="fas fa-trash"></i></button>
            </div>
        </div>
    </div>
{% endblock %}

{% block vich_image_widget %}
    <div class="vich-image">
        {% if errors|length > 0 %}
            {% set attr = attr|merge({class: (attr.class|default('') ~ ' is-invalid')|trim}) %}
        {% endif %}

        {% if image_uri %}
            <a href="{{ asset_helper is same as(true) ? asset(image_uri) : image_uri }}" target="_blank" download>
                <img src="{{ asset_helper is same as(true) ? asset(image_uri) : image_uri }}" class="vich-image-pic" />
            </a>
        {% else %}
            {{ form_widget(form.file, {attr: attr}) }}
        {% endif %}
    </div>
{% endblock %}
{#  END - BLOCK PICTURE  #}
