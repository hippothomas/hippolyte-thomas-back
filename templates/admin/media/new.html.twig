{% extends 'admin/base.html.twig' %}

{% block title %}Création d'un média {{ title_base }}{% endblock %}
{% block page_title %}Créer un média{% endblock %}
{% block page_pretitle %}Médias{% endblock %}

{% block page_content %}
<div class="container mb-5">
    {{ form_start(form) }}

    <div class="mb-3">
        <label class="form-label required" for="media_caption">Légende</label>
        {{ form_widget(form.caption) }}
        <div class="form-error">
            {{ form_errors(form.caption) }}
        </div>
    </div>
    {{ form_row(form.file) }}

    <button type="submit" class="btn btn-primary">Créer le média</button>

    {{ form_end(form) }}
</div>
{% endblock %}
