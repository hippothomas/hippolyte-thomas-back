{% extends 'admin/base.html.twig' %}

{% block title %}Tags {{ title_base }}{% endblock %}
{% block page_pretitle %}Articles{% endblock %}
{% block page_title %}Gestion des Tags{% endblock %}
{% block page_actions %}
    <a href="{{ path('admin_tag_new') }}" class="btn btn-success">Cr√©er un nouveau Tag</a>
{% endblock %}

{% block page_content %}
    <div class="container mb-5">
        <table class="table table-vcenter table-nowrap">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Articles</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{tag.id}}</td>
                    <td>{{tag.name}}</td>
                    <td>{{tag.slug}}</td>
                    <td><span class="badge bg-primary rounded-pill">{{tag.posts|length}}</span></td>
                    <td class="table-actions">
                        <a href="{{ path('admin_tag_edit', {id: tag.id}) }}" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="{{ path('admin_tag_delete', {id: tag.id}) }}" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
