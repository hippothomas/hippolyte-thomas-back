{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Réseaux{% endblock %}

{% block body %}
<div class="container mb-5">
    <div class="row align-items-center my-5">
        <div class="col">
            <h1>Gestion des Réseaux</h1>
        </div>
        <div class="col d-flex justify-content-end">
            <a href="#" class="btn btn-success">Créer un nouveau Réseau</a>
        </div>
    </div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Lien</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for social in socials %}
                <tr>
                    <td>{{social.id}}</td>
                    <td>{{social.name}}</td>
                    <td>{{social.link}}</td>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit fa-sm"></i></a>
                        <a href="#" class="btn btn-warning"><i class="fas fa-trash fa-sm"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
